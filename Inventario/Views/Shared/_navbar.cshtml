<!-- Header -->
<header>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <!-- Logo con padding a la izquierda -->
            <a class="navbar-brand" href="#" style="padding-left: 10px;">
                <img src="~/Assets/Images/WiGoLogo.svg" alt="Logo" height="36">
            </a>
            <!-- Texto junto al logo -->
            <span class="navbar-text">WiGo ERP</span>

            <!-- Botón hamburguesa (3 barras) para mostrar/ocultar menú lateral -->
            <button class="btn btn-light ms-3" id="menu-toggle">
                <i class="bi bi-list"></i>
            </button>

            <!-- Botón de engranaje a la derecha con dropdown -->
            <div class="dropdown ms-auto">
                <button class="btn btn-light dropdown-toggle" type="button" id="settingsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-gear"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="settingsDropdown">
                    <li>
                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "" }))
                        {
                            @Html.AntiForgeryToken()
                            <button class="dropdown-item" type="submit">
                                Cerrar Sesión
                            </button>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>